SELECT author, sum(words) AS total_words from books 
    GROUP BY author
    HAVING total_words > 1000000
    ;
 //This is making a list of author and the sum of the word count with renaming your words count into total_words made from books, it is Grouped by Author and showing any author with a word count of 1 million words or more.
    
Select author, AVG(words) AS avg_words from books
    Group by author
    Having avg_words > 150000
    ;
//This is getting the avg word count from each author and AVG each one but only showing what author that has 150,000 words or more as there AVG.

Select author From books Group by words Having Count(*) >= 150000;
//This is doing the same as above but with a some what condensed version. 
